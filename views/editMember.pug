                        option(value='VA' selected=(member.state == 'VA')) Virginia
                        option(value='WA' selected=(member.state == 'WA')) Washington
                        option(value='WV' selected=(member.state == 'WV')) West Virginia
                        option(value='WI' selected=(member.state == 'WI')) Wisconsin
                        option(value='WY' selected=(member.state == 'WY')) Wyoming
            div.form-group
                label.col-sm-2.control-label(for='zipcode') Zip Code: 
                div.col-sm-8
                    input#zipcode.form-control(type='text' name='zipcode' placeholder='00000' value=member.zip_code required='true')
            div.form-group
                label.col-sm-2.control-label(for='email') Email: 
                div.col-sm-8
                    input#email.form-control(type='email' name='email' placeholder='some1@gof5679.org' value=member.email required='true')
            button.btn.btn-primary(type='submit') Update

    if errors 
        ul
          for error in errors
            li!= error.msg